{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "ES6",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "paths": {
      "@api/*": [
        "./src/api/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "*.test.ts"
  ]
}